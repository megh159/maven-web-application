pipeline{
agent any

tools{
maven "maven3.8.6"
}
stages {
stage('checkout'){
steps{
 slacknotifications("STARTED")

git branch: 'development', url: 'https://github.com/meghana4-g/maven-web-application.git'
}
}
stage('maven'){
steps{
sh"mvn clean package"
}
}

//Execute SonarQube report
stage('ExecuteSonarQubeReport'){
steps{
sh "mvn sonar:sonar"

}
}
//nexus
stage('nexus')
{
steps{
sh "mvn deploy"

}
}

//deployappintotomcat
stage('deploy')
{
steps{
sshagent(['lastssh']) {
  sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@172.31.44.155:/opt/apache-tomcat-9.0.64/webapps/"
}
}
}
}
post {
  success {
    slacknotifications(currentBuild.result)
  }
  failure {
   slacknotifications(currentBuild.result)
  }
}

}


def slacknotifications(String buildStatus = 'STARTED') {
 
  buildStatus =  buildStatus ?: 'SUCCESS'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    color = 'YELLOW'
    colorCode = '#FFF000'
  } else if (buildStatus == 'SUCCESS') {
    color = 'GREEN'
    colorCode = '#00FF00'
  } else {
    color = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary)
}
